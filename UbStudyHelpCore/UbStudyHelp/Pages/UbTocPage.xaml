<Page xmlns:Controls="clr-namespace:UbStudyHelp.Controls"  x:Class="UbStudyHelp.Pages.UbTocPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UbStudyHelp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UbTocPage">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Controls:LeftMenuTop x:Name="LeftMenuTop" Grid.Row="0" Text="Table of Contents" ImageSourceName="TocLogo" />
        <TabControl Grid.Row="1" Margin="10, 10, 10, 10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TabItem Name="TabItemLeft" Header="Left">
                <ScrollViewer VerticalScrollBarVisibility="Auto" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                    <TreeView Name="TOC_Left" Grid.Column="0" Margin="0,4,0,0" HorizontalAlignment="Stretch"  BorderThickness="0"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Name="TabItemRight" Header="Right">
                <ScrollViewer VerticalScrollBarVisibility="Auto" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                    <TreeView Name="TOC_Right" Grid.Column="0" Margin="0,4,0,0" HorizontalAlignment="Stretch"  BorderThickness="0"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
 