<Window x:Class="UbStudyHelp.Classes.AnnotationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbStudyHelp.Classes"
        mc:Ignorable="d"
        Title="Paragraph Annotations" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <FlowDocumentScrollViewer Name="FlowDocument" Grid.Row="0"></FlowDocumentScrollViewer>
        <RichTextBox x:Name="RichTextBoxNote" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="5" ></RichTextBox>
        <Label x:Name="lblCheck" Grid.Row="2"></Label>
    </Grid>
</Window>
