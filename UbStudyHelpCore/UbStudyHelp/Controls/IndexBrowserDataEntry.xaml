<UserControl xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"  x:Class="UbStudyHelp.Controls.IndexBrowserDataEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:UbStudyHelp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Grid for text input  -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="36"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TextBlockLabelIndex" Height="Auto" Width="Auto" Grid.Column="0" Margin="5,5,5,5" TextWrapping="Wrap">
                <TextBlock.Inlines>
                    <Run FontWeight="Bold" FontSize="14" Text="Type to search index:" />
                </TextBlock.Inlines>
            </TextBlock>
            
            

            <Button x:Name="ButtonHelp" Grid.Column="1" Width="Auto" Height="Auto"  Margin="5,5,5,5">
                <iconPacks:PackIconFontAwesome Kind="QuestionSolid"  Width="16" Height="16" />
            </Button>

            <TextBox Grid.Row="0" Grid.Column="2" Name="TextBoxIndexLetters" HorizontalAlignment="Stretch" Text="" />

        </Grid>

        <ComboBox Grid.Row="1" x:Name="ComboBoxIndexSearch" HorizontalAlignment="Stretch" Height="26" Margin="5,5,5,5">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
        </ComboBox>

    </Grid>
    
</UserControl>
